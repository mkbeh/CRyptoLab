#:import MDTabbedPanel libs.applibs.kivymd.tabs.MDTabbedPanel
#:import MDTab libs.applibs.kivymd.tabs.MDTab
#:import MDSwitch libs.applibs.kivymd.selectioncontrols.MDSwitch


<Ico>:
    name: 'ico'
    icobazaar_: icobazaar
    noname_: noname

    MDTabbedPanel:
        id: tab_panel
        tab_display_mode:'text'
        tab_color: 0, 0, 0, 1
        tab_text_color_active: tab_panel.theme_cls.primary_dark
        tab_indicator_color: tab_panel.theme_cls.primary_dark

        MDTab:
            name: 'ico_list'
            text: "ICO"

            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: "Вывод с парсера"
                halign: 'center'


        MDTab:
            name: 'catalogs'
            text: "Каталог"

            ScrollView:
                do_scroll_y: True

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    padding: dp(40)
                    spacing: dp(50)
                    height: self.minimum_height
                    size_hint_x: .95

                    MDLabel:
                        font_style: 'Title'
                        theme_text_color: 'Primary'
                        text: "Каталог агрегаторов"
                        halign: 'center'

                    GridLayout:
                        cols: 2

                        MDLabel:
                            font_style: 'Body2'
                            theme_text_color: 'Primary'
                            text: "ICO bazaar"
                            pos_hint: {'center_x': 0, 'center_y': 0.5}

                        MDSwitch:
                            id: icobazaar
                            size_hint: None, None
                            size: dp(36), dp(48)
                            pos_hint: {'center_x': 0, 'center_y': 0.5}
                            active: True

                            on_touch_up: print(icobazaar.active)

                    GridLayout:
                        cols: 2

                        MDLabel:
                            font_style: 'Body2'
                            theme_text_color: 'Primary'
                            text: "No name"
                            pos_hint: {'center_x': 0, 'center_y': 0.5}

                        MDSwitch:
                            id: noname
                            size_hint: None, None
                            size: dp(36), dp(48)
                            pos_hint: {'center_x': 0, 'center_y': 0.5}
                            active: False
