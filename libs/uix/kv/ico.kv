#:import MDTabbedPanel libs.applibs.kivymd.tabs.MDTabbedPanel
#:import MDTab libs.applibs.kivymd.tabs.MDTab


<Ico>:
    name: 'ico'

    MDTabbedPanel:
        id: tab_panel
        tab_display_mode:'text'
        tab_color: 0, 0, 0, 1
        tab_text_color_active: tab_panel.theme_cls.primary_dark
        tab_indicator_color: tab_panel.theme_cls.primary_dark

        MDTab:
            name: 'ico_list'
            text: "Список ICO"

            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: "Вывод с парсера"
                halign: 'center'


        MDTab:
            name: 'catalogs'
            text: "Каталоги"

            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: "Каталог установленных агрегаторов"
                halign: 'center'
        MDTab:
            name: 'repos'
            text: 'Репозитории'

            MDLabel:
                font_style: 'Body1'
                theme_text_color: 'Primary'
                text: "Список агрегаторов для установки"
                halign: 'center'
