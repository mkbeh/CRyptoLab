#:import MDTabbedPanel libs.applibs.kivymd.tabs.MDTabbedPanel
#:import MDTab libs.applibs.kivymd.tabs.MDTab
#:import MDSwitch libs.applibs.kivymd.selectioncontrols.MDSwitch

#:import hex kivy.utils.get_color_from_hex


<CatGridLayout@GridLayout>
    cols: 2
    padding: dp(5)

    canvas:
        Color:
            rgba: hex('#454545')
        Line:
            width: .5
            ellipse: (self.x, self.y, self.width, self.height)

<CatLabel@MDLabel>:
    font_style: 'Body2'
    theme_text_color: 'Primary'
    pos_hint: {'center_x': 0, 'center_y': 0.5}

<CatSwitch@MDSwitch>:
    size_hint: None, None
    size: dp(36), dp(48)
    pos_hint: {'center_x': 0, 'center_y': 0.5}



<Ico>:
    name: 'ico'
    icobazaar_: icobazaar
    noname_: noname
    grid_box: grid_box

    MDTabbedPanel:
        id: tab_panel
        tab_display_mode:'text'
        tab_color: 0, 0, 0, 1
        tab_text_color_active: tab_panel.theme_cls.primary_dark
        tab_indicator_color: tab_panel.theme_cls.primary_dark

        MDTab:
            name: 'ico_list'
            text: "ICO"

            ScrollView:
                do_scroll_y: True

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: (0, dp(20), 0, dp(20))

                    GridLayout:
                        id: grid_box

                        cols: 1
                        spacing: dp(40)
                        pos_hint: {'center_x':.5}
                        size_hint: (.95, None)

        MDTab:
            name: 'catalogs'
            text: "Каталог"

            ScrollView:
                do_scroll_y: True

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    padding: dp(40)
                    spacing: dp(65)
                    height: self.minimum_height
                    size_hint_x: .95

                    MDLabel:
                        font_style: 'Title'
                        theme_text_color: 'Primary'
                        text: "Каталог агрегаторов"
                        halign: 'center'

                    GridLayout:
                        cols: 2
                        padding: dp(5)

                        CatLabel:
                            text: "ICO bazaar"

                        CatSwitch:
                            id: icobazaar
                            name: 'icobazaar'
                            active: root.get_switch_val(app.return_config(), 'icobazaar')

                            on_touch_up: root.callback(icobazaar, icobazaar.active)

                    CatGridLayout:

                        CatLabel:
                            text: "No name"
                            pos_hint: {'center_x': 0, 'center_y': 0.5}

                        CatSwitch:
                            id: noname
                            name: 'noname'
                            active: root.get_switch_val(app.return_config(), 'noname')

                            on_touch_up: root.callback(noname, noname.active)
