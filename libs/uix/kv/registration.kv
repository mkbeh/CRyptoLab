# -*- coding: utf-8 -*-


<Registration>:
    name: 'registration'

    ScrollView:
        do_scroll_x: False

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            padding: dp(40)
            spacing: dp(40)
            height: self.minimum_height
            size_hint_x: .7

            MDLabel:
                font_style: 'Headline'
                theme_text_color: 'Primary'
                text: 'Email:'

            MDTextField:
                id: text_field_error
                hint_text: "Введите ваш email."
                helper_text: "Two is my least favorite number"
                required: True
                helper_text_mode: "on_error"
                font_size: dp(23)
                max_text_length: 30

            MDLabel:
                font_style: 'Headline'
                theme_text_color: 'Primary'
                text: 'Пароль:'

            MDTextField:
                id: text_field_error
                hint_text: "Введите ваш пароль."
                helper_text: "Пароль должен быть не менее 6 символов."
                required: True
                helper_text_mode: "on_error"
                font_size: dp(23)

            MDLabel:
                font_style: 'Headline'
                theme_text_color: 'Primary'
                text: 'Подтверждение пароля:'

            MDTextField:
                id: text_field_error
                hint_text: "Введите ваш пароль еще раз."
                # helper_text: "Введенные пароли не совпадают."
                required: True
                # helper_text_mode: "on_error"
                font_size: dp(23)

            MDRaisedButton:
                text: "Регистрация."
                elevation_normal: 2
                opposite_colors: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}