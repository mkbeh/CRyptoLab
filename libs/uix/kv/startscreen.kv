<StartScreen>:
    id: nav_layout

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'

            Toolbar:
                id: action_bar
                left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                right_action_items:
                    [['magnify', lambda x: app.show_search()],
                    ['cached', lambda x: x],
                    ['apps', lambda x: app.show_aggregators()]]
                elevation: 10

            ScreenManager:
                id: manager

                Last:
                    name: 'last'

                Login:
                    name: 'login'

                Registration:
                    name: 'registration'

                Cryptoteka:
                    name: 'cryptoteka'

                WatchHistory:
                    name: 'watch_history'

                News:
                    name: 'news'

                Ico:
                    name: 'ico'

                Airdrops:
                    name: 'airdrops'

                BTT:
                    name: 'btt'

                Events:
                    name: 'events'

                Lucky:
                    name: 'lucky'

                Settings_:
                    name: 'settings'

                Search:
                    name: 'search'

                IcobazaarItem:
                    name: 'icobazaar_item'
